@model List<Patient>
@{
    ViewData["Title"] = "Unallocated Patients";
}

<h2 class="fw-bold mb-4">
    <i class="fas fa-user-clock text-info me-2"></i>Unallocated Patients
</h2>

@if (!Model.Any())
{
    <div class="alert alert-success shadow-sm">
        All patients are assigned beds.
    </div>
}
else
{
    <div class="alert alert-info shadow-sm mb-4">
        <strong>@Model.Count</strong> patients waiting for bed allocation.
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-info">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Disease</th>
                        <th>Status</th>
                        <th>O₂</th>
                        <th>Temp</th>
                        <th>Admitted</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@patient.PatientName</td>
                            <td>@patient.Age</td>
                            <td>@patient.DiseaseCategory</td>
                            <td>
                                <span class="badge @(patient.IsCritical ? "bg-danger" : "bg-warning")">
                                    @(patient.IsCritical ? "CRITICAL" : "STABLE")
                                </span>
                            </td>
                            <td>
                                <span class="badge @(patient.OxygenLevel < 92 ? "bg-danger" : "bg-success")">
                                    @patient.OxygenLevel%
                                </span>
                            </td>
                            <td>@patient.Temperature°C</td>
                            <td>@patient.AdmissionDate.ToString("MM/dd/yyyy")</td>
                            <td class="text-end">
                                <a href="/Home/AllocateBed/@patient.PatientID" class="btn btn-sm btn-success me-1">
                                    <i class="fas fa-bed"></i>
                                </a>
                                <a href="/Home/EditPatient/@patient.PatientID" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<a href="/" class="btn btn-outline-secondary mt-4">
    <i class="fas fa-arrow-left me-2"></i>Back
</a>
