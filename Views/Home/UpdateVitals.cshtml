@model Patient
@{
    ViewData["Title"] = "Update Vitals";
}

<h2 class="fw-bold mb-4">
    <i class="fas fa-heartbeat text-danger me-2"></i>Update Vitals — @Model.PatientName
</h2>

<form method="post" action="/Home/UpdateVitals/@Model.PatientID">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Temperature (°C)</label>
                    <input name="temperature" value="@Model.Temperature" class="form-control">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Pulse Rate</label>
                    <input name="pulseRate" value="@Model.PulseRate" class="form-control">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Oxygen Level (%)</label>
                    <input name="oxygenLevel" value="@Model.OxygenLevel" class="form-control">
                </div>
            </div>

            <div class="alert @(Model.IsCritical ? "alert-danger" : "alert-success")">
                <strong>Status:</strong>
                @(Model.IsCritical ? "CRITICAL" : "STABLE")
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary me-2">
            <i class="fas fa-save me-2"></i>Update
        </button>
        <a href="/Home/Patients" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
