@model List<Patient>
@{
    ViewData["Title"] = "Critical Patients";
}

<h2 class="fw-bold mb-4 text-danger">
    <i class="fas fa-exclamation-triangle me-2"></i>Critical Patients
</h2>

@if (!Model.Any())
{
    <div class="alert alert-success shadow-sm">
        <i class="fas fa-check-circle me-2"></i>No critical patients at the moment.
    </div>
}
else
{
    <div class="alert alert-danger shadow-sm mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>@Model.Count</strong> critical patients require immediate attention.
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-danger">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Disease</th>
                        <th>O₂</th>
                        <th>Temp</th>
                        <th>Pulse</th>
                        <th>Bed</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@patient.PatientName</td>
                            <td>@patient.Age</td>
                            <td>@patient.DiseaseCategory</td>
                            <td><span class="badge bg-danger">@patient.OxygenLevel%</span></td>
                            <td>@patient.Temperature°C</td>
                            <td>@patient.PulseRate bpm</td>
                            <td>
                                @if (string.IsNullOrEmpty(patient.AssignedBedID))
                                {
                                    <span class="badge bg-warning">NEEDS ICU</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">ICU ASSIGNED</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (string.IsNullOrEmpty(patient.AssignedBedID))
                                {
                                    <a href="/Home/AllocateBed/@patient.PatientID" class="btn btn-sm btn-success me-1">
                                        <i class="fas fa-bed"></i>
                                    </a>
                                }
                                <a href="/Home/UpdateVitals/@patient.PatientID" class="btn btn-sm btn-warning">
                                    <i class="fas fa-heartbeat"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<a href="/" class="btn btn-outline-secondary mt-4">
    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
</a>
