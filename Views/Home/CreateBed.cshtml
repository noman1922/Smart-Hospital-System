@model Bed
@{
    ViewData["Title"] = "Add Bed";
}

<h2 class="fw-bold mb-4">
    <i class="fas fa-bed text-primary me-2"></i>Add New Bed
</h2>

<form method="post">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Ward Name</label>
                    <input asp-for="WardName" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Bed Type</label>
                    <select asp-for="BedType" class="form-select">
                        <option value="">Select</option>
                        <option value="General">General</option>
                        <option value="ICU">ICU</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Save
        </button>
        <a href="/Home/Beds" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
