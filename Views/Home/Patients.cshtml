@model List<Patient>
@{
    ViewData["Title"] = "Patients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
        <i class="fas fa-users text-primary me-2"></i>Patient Management
    </h2>
    <a href="/Home/CreatePatient" class="btn btn-primary">
        <i class="fas fa-user-plus me-2"></i>Add Patient
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Disease</th>
                    <th>Temp</th>
                    <th>Pulse</th>
                    <th>O₂</th>
                    <th>Status</th>
                    <th>Bed</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr class="@(patient.IsCritical ? "table-danger" : "")">
                        <td class="fw-semibold">@patient.PatientName</td>
                        <td>@patient.Age</td>
                        <td>@patient.DiseaseCategory</td>
                        <td>@patient.Temperature°C</td>
                        <td>@patient.PulseRate bpm</td>
                        <td>
                            <span class="badge @(patient.OxygenLevel < 92 ? "bg-danger" : "bg-success")">
                                @patient.OxygenLevel%
                            </span>
                        </td>
                        <td>
                            <span class="badge @(patient.IsCritical ? "bg-danger" : "bg-success")">
                                @(patient.IsCritical ? "CRITICAL" : "STABLE")
                            </span>
                        </td>
                        <td>
                            <span class="badge @(string.IsNullOrEmpty(patient.AssignedBedID) ? "bg-warning" : "bg-success")">
                                @(string.IsNullOrEmpty(patient.AssignedBedID) ? "NO BED" : "ASSIGNED")
                            </span>
                        </td>
                        <td class="text-end">
                            <a href="/Home/EditPatient/@patient.PatientID" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Home/UpdateVitals/@patient.PatientID" class="btn btn-sm btn-outline-warning">
                                <i class="fas fa-heartbeat"></i>
                            </a>
                            @if (string.IsNullOrEmpty(patient.AssignedBedID))
                            {
                                <a href="/Home/AllocateBed/@patient.PatientID" class="btn btn-sm btn-outline-success">
                                    <i class="fas fa-bed"></i>
                                </a>
                            }
                            <a href="/Home/DeletePatient/@patient.PatientID" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        <i class="fas fa-info-circle me-2"></i>No patients found.
    </div>
}
