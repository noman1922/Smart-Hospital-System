@model Bed
@{
    ViewData["Title"] = "Delete Bed";
}

<h2 class="fw-bold mb-4 text-danger">
    <i class="fas fa-trash me-2"></i>Delete Bed
</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">

        @if (Model.IsOccupied)
        {
            <div class="alert alert-danger">
                <h5 class="fw-bold">
                    <i class="fas fa-ban me-2"></i>Deletion Blocked
                </h5>
                <p>This bed is currently occupied.</p>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <h5 class="fw-bold">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <p>This action cannot be undone.</p>
            </div>
        }

        <div class="card bg-light mb-3">
            <div class="card-body">
                <p><strong>Ward:</strong> @Model.WardName</p>
                <p>
                    <strong>Type:</strong>
                    <span class="badge @(Model.BedType == BedType.ICU ? "bg-danger" : "bg-primary")">
                        @Model.BedType
                    </span>
                </p>
                <p><strong>Last Sanitized:</strong> @Model.LastSanitized.ToString("MM/dd/yyyy HH:mm")</p>
            </div>
        </div>

        @if (!Model.IsOccupied)
        {
            <form method="post">
                <button class="btn btn-danger me-2">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
                <a href="/Home/Beds" class="btn btn-outline-secondary">Cancel</a>
            </form>
        }
        else
        {
            <a href="/Home/Beds" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
        }
    </div>
</div>
