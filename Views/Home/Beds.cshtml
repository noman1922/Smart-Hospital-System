@model List<Bed>
@{
    ViewData["Title"] = "Beds";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
        <i class="fas fa-bed text-primary me-2"></i>Bed Management
    </h2>
    <a href="/Home/CreateBed" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add Bed
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Ward</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Sanitized</th>
                    <th>Cleanliness</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bed in Model)
                {
                    <tr>
                        <td>@bed.WardName</td>
                        <td>
                            <span class="badge @(bed.BedType == BedType.ICU ? "bg-danger" : "bg-primary")">
                                @bed.BedType
                            </span>
                        </td>
                        <td>
                            <span class="badge @(bed.IsOccupied ? "bg-danger" : "bg-success")">
                                @(bed.IsOccupied ? "OCCUPIED" : "AVAILABLE")
                            </span>
                        </td>
                        <td>@bed.LastSanitized.ToString("MM/dd/yyyy HH:mm")</td>
                        <td>
                            <span class="badge @(bed.SanitationStatus == "OVERDUE" ? "bg-warning" : "bg-success")">
                                @bed.SanitationStatus
                            </span>
                        </td>
                        <td class="text-end">
                            <a href="/Home/EditBed/@bed.BedID" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Home/DeleteBed/@bed.BedID" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
